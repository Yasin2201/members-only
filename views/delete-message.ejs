<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <% if (user) {%>

        <nav>
            <h1>
                Members Only
            </h1>

            <div>
                <a href="/">Home</a>
                <a href="/new-message">Create New Message</a>
                <a href="/member-join">Become a Member</a>
                <a href="/admin-access">Become a Admin</a>
                <a href="/log-out">Log Out</a>
            </div>
        </nav>

        <div class="delete-message-alert">

            <h2>
                <%= title %>
            </h2>

            <div class="message-div">
                <h3>
                    <%= message.title%>
                </h3>
                <p>
                    <%= message.text%>
                </p>

                <div class="message-date-div">
                    <p>
                        <%= user && user.isMember ? `${message.date}` : 'date: **/**/****' %>
                    </p>
                    <p>
                        <%= user && user.isMember ? `${message.username}` : 'Anon' %>
                    </p>
                </div>
            </div>
        </div>

        <form action="" method="POST">
            <input type="hidden" name="messageid" required="true" value=<%=message._id%>>
            <input type="password" name="adminPassword" placeholder="Password">
            <button>Delete</button>
        </form>

        <% if (typeof errors !='undefined' ) { %>
            <ul>
                <% errors.forEach(err=> { %>
                    <li>
                        <%= err.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <% } else { %>
                    <p>
                        <a href="/login">Login</a>
                        to see this page.
                    </p>
                    <%}%>

</body>

</html>