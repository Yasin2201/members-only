<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>


  <% if (user) {%>

    <nav>
      <h1>
        <%= title %>
      </h1>

      <div>
        <a href="/">Home</a>
        <a href="/new-message">Create New Message</a>
        <a href="/member-join">Become a Member</a>
        <a href="/admin-access">Become a Admin</a>
        <a href="/log-out">Log Out</a>
      </div>
    </nav>


    <!-- <h1>
      WELCOME BACK <%= user.username %>
    </h1> -->

    <% } else { %>
      <nav>
        <h1>
          <%= title %>
        </h1>

        <div>
          <a href="/login">Log In</a>
        </div>
      </nav>
      <%}%>

        <% all_messages.map((message)=> {%>

          <div>
            <p>
              <%= user && user.isMember ? `${message.username}` : 'Anon' %>
            </p>
            <p>
              <%= message.title%>
            </p>
            <p>
              <%= message.text%>
            </p>
            <p>
              <%= user && user.isMember ? `${message.date}` : 'date: **/**/****' %>
            </p>
            <% if (user && user.isAdmin) {%>
              <a href=<%=`/delete-message/${message._id}`%>>Delete</a>
              <% }%>
          </div>

          <%})%>
</body>

</html>