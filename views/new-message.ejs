<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <% if (user) {%>
        <h1>
            <%= title %>
        </h1>

        <a href="/log-out">Log Out</a>
        <a href="/new-message">Create New Message</a>
        <a href="/member-join">Become a Member</a>
        <a href="/admin-access">Become a Admin</a>

        <form action="" method="POST">
            <input type="text" name="messageTitle" placeholder="Title">
            <input type="text" name="messageText" placeholder="What's on your mind?">
            <button>Post</button>
        </form>

        <% } else { %>
            <p>
                <a href="/login">Login</a>
                to see this page.
            </p>

            <%}%>

                <% if (typeof errors !='undefined' ) { %>
                    <ul>
                        <% errors.forEach(err=> { %>
                            <li>
                                <%= err.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>
</body>

</html>