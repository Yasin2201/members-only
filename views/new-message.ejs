<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <% if (user) {%>

        <nav>
            <h1>
                Members Only
            </h1>

            <div>
                <a href="/">Home</a>
                <a href="/new-message">Create New Message</a>
                <a href="/member-join">Become a Member</a>
                <a href="/admin-access">Become a Admin</a>
                <a href="/log-out">Log Out</a>
            </div>
        </nav>

        <form action="" method="POST">
            <h2>
                <%= title %>
            </h2>
            <input type="text" name="messageTitle" maxlength="30" placeholder="Title">
            <input type="text" name="messageText" maxlength="250" placeholder="What's on your mind?">
            <button>Post</button>
        </form>

        <% } else { %>
            <p>
                <a href="/login">Login</a>
                to see this page.
            </p>

            <%}%>

                <% if (typeof errors !='undefined' ) { %>
                    <ul>
                        <% errors.forEach(err=> { %>
                            <li>
                                <%= err.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>
</body>

</html>